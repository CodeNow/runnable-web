<div class="modal-dialog spec-modal" id="create-spec-modal">

  <div class="modal-content">

    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">Create API</h4>
    </div><!--/.modal-header-->

    <div class="modal-body">
      {{#if_eq step compare=1}}
      <form class="name-form step1">
        <input class="form-control" type="text" name="name"
          placeholder="API Name" value="{{specification.attributes.name}}" required>
        <hr>
        {{view "spec_requirements" model=../specification}}
        <a href="javascript:" class="back">Go Back</a>
        <button class="orange">Next</button>
      </form>
      {{else}}
      <form class="step2">
        <ul class="nav nav-tabs">
          <li class="active in">
            <a href="#create-spec-instructions">API Instructions</a>
          </li>
          <li>
            <a href="#create-spec-preview">Preview Instructions</a>
          </li>
        </ul>
        <div class="tab-content">
          <div id="create-spec-instructions" class="tab-pane active in">
            <textarea name="instructions" class="form-control" placeholder="Instruction">{{instructions}}</textarea>
          </div>
          <div id="create-spec-preview" class="tab-pane">
            {{markdown instructions}}
          </div>
        </div>
        <button type="button" class="prev">Previous</button>
        <button class="orange">Create and Add</button>
      </form>
      {{/if_eq}}
    </div><!--/.modal-body-->

  </div><!--/.modal-content-->

</div><!--/.modal-dialog-->
