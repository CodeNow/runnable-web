{{#if fullpage}}
{{view 'header_view' nosearch=true noactions=true}}
<div class="modal-page">
{{/if}}

  <div class="modal-dialog">
    <div id="register" class="modal-content">
      <form class="modal-body">
        <input class="form-control" name="username" placeholder="Username" autocapitalize="off" required autofocus>
        <input type="email" class="form-control" name="email" placeholder="Email" required>
        <input type="password" class="form-control" name="password" placeholder="Password" required>
        <button type="submit" class="orange col-sm-12">Sign Up</button>
        <p>Already have an account? <a class="login-link">Log in here</a></p>
      </form>
    </div>
    <div id="login" class="modal-content">
      <form class="modal-body">
        <input class="form-control" name="username" placeholder="Email or Username" autocapitalize="off" autofocus required>
        <input type="password" class="form-control" name="password" placeholder="Password" required>
        <button type="submit" class="orange col-sm-12">Log In</button>
        <p>Not Registered? <a class="signup-link">Sign up for a free account.</a></p>
      </form>
    </div>
  </div>

{{#if fullpage}}
</div>
{{view 'footer_view'}}
{{/if}}