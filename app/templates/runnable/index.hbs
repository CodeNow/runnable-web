{{view "app_user" model=user}}
{{view "header_view" model=user context=.}}
{{view "global_message"}}
{{view "owner_warning" model=image containerid=container.id}}

<main class="project-container">
  <section id="project-details" class="container">
    <div class="row">
      <div class="col-sm-9">
        <div class="page-title">
          {{view "runnable_title" model=image}}
          {{view "runnable_stats" model=image}}
          {{#if image.attributes.tags.length}}
          {{view "runnable_tags" model=container editmode=isVerified}}
          {{/if}}
        </div>
        <div class="main-controls">
          {{view "fork_button" collection=defaultFiles model=container}}
          {{view "improve_button"}}
        </div>
      </div>
      {{view "runnable_owner" model=image.owner model_id=image.owner.id model_name='user' created=image.attributes.created image=image context=.}}
    </div>
  </section>

  <section id="project">
    {{view "code_editor" context=. editmode=false model=image collection=defaultFiles}}
    {{view "rebuild_loader"}}
  </section>

  {{!--
  <section class="container">
    <div class="row">
      <ul id="sidebar" class="col-sm-12">
        {{#if related.length}}
        <li class="related-code">
          <h3>Related Code</h3>
          <ul>
            {{#each related.models}}
            {{view "runnable_item_small" model=.}}
            {{/each}}
          </ul>
        </li>
        {{/if}}
      </ul>
    </div>
  </section>
  --}}

</main>
{{view "footer_view" model=user context=.}}
