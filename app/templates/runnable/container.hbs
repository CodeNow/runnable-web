{{view "app_user" model=user}}
{{view "header_view" model=user context=.}}
{{view "global_message"}}
{{view "publish_warning" model=container parentid=image.attributes._id parentowner=image.attributes.owner}}

<main class="project-container">
  <section id="project-details" class="container">
    <div class="row">
      <div class="col-sm-9">
        <div class="page-title">
          {{view "runnable_title" model=container}}
          <ul class="tags">
            {{#each image.attributes.tags}}
              <li>{{view "tag_link" name=name}}
            {{/each}}
            {{#if isVerified}}
              <li class="glyphicons plus">
            {{/if}}
          </ul>
          {{!--
          {{#if isVerified}}
          {{view "runnable_new_tag_form" model=container}}
          <aside>
            Projects without tags will not be publicly listed on Runnable.
          </aside>
          {{/if}}
          --}}
        </div>
        <div class="main-controls">
          {{view "save_button" collection=defaultFiles}}
          {{view "public_toggle"}}
        </div>
      </div>
    {{view "project_url"}}
    </div>
  </section>

  <section id="project">
    {{view "code_editor" context=. editmode=true model=container}}
    {{view "rebuild_loader"}}
  </section>

  {{!--
  <section class="container">
    <div class="row">
      <ul id="sidebar" class="col-sm-12">
        <li class="tags">
          <h3>Tags</h3>
          {{view "runnable_tags" model=container editmode=isVerified}}
          {{#if isVerified}}
          {{view "runnable_new_tag_form" model=container}}
          <aside>
            Projects without tags will not be publicly listed on Runnable.
          </aside>
          {{/if}}
      </ul>
    </div>
  </section>
  --}}
</main>

{{view "footer_view" model=user context=.}}
