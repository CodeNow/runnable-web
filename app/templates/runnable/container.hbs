{{view "app_user" model=user}}
{{view "header_view" model=user context=.}}
{{view "global_message"}}
{{view "publish_warning" model=container parentid=image.attributes._id parentowner=image.attributes.owner}}

<main class="project-container">
  <section id="project-details" class="container">


    <div style="display:none;" id="project-details-preview" class="row">
      <div class="col-sm-9">
        <div class="page-title">
          {{view "runnable_title" model=image}}
          {{view "runnable_stats" model=image}}
          {{#if image.attributes.tags.length}}
          {{view "project_tags" model=container edit=false}}
          {{/if}}
        </div>
        <div class="main-controls">
          {{view "fork_button" collection=defaultFiles model=container}}
          {{view "save_button" collection=defaultFiles}}
          {{view "improve_button"}}
        </div>
      </div>
      {{view "runnable_owner" model=image.owner model_id=image.owner.id model_name='user' created=image.attributes.created image=image context=.}}
    </div>


    <div id="project-details-edit" class="row">
      <div class="col-sm-9">
        <div class="page-title">
          {{view "runnable_title" model=container}}
          {{view "project_tags" model=container edit=true}}
        </div>
        <div class="main-controls">
          {{view "instance_button"}}
          {{view "save_button" collection=defaultFiles}}
          {{view "public_toggle" model=container}}
        </div>
      </div>
      {{view "project_url" model=image}}
    </div>


  </section>

  <section id="project">
    {{view "code_editor" context=. editmode=true model=container}}
    {{view "rebuild_loader"}}
  </section>
</main>

{{view "footer_view" model=user context=.}}
