{{#if fullpage}}
{{view 'header_view' nosearch=true noactions=true}}
<div class="modal-page">
{{/if}}
<form class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">{{header}}</h4>
    </div>
    <div class="modal-body">
      <input type="password" class="form-control" name="passwordNew" placeholder="" autocapitalize="off" autofocus required>
      <input type="hidden" class="form-control" name="username" required>
      <input type="hidden" class="form-control" name="passwordResetToken" required>
      <button type="submit" class="orange col-sm-12">Set Password</button>
    </div>
  </div><!-- /.modal-content -->
</form><!-- /.modal-dialog -->
{{#if fullpage}}
</div>
{{view 'footer_view'}}
{{/if}}