{{#if fullpage}}
{{view 'header_view' nosearch=true noactions=true}}
<div class="modal-page">
{{/if}}
<form class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">{{header}}</h4>
    </div>
    <div class="modal-body">
      <input type="text" class="form-control" name="username" placeholder="Email or Username" autocapitalize="off" autofocus required>
      <button type="submit" class="orange col-sm-12">Reset Password</button>
      <p>Want to login? <a class="login-link" href="javascript:void(0);">Log in here</a></p>
    </div>
  </div><!-- /.modal-content -->
</form><!-- /.modal-dialog -->
{{#if fullpage}}
</div>
{{view 'footer_view'}}
{{/if}}