<h3 class="{{#if filteringActive}}in{{/if}}">

  Filter<span>ing</span>
  <button data-action="show-all" type="button">Show All</button>
</h3>
<ol>

  {{#each collection.models}}
    {{#with attributes}}
      {{#if display}}
        {{#if isActiveFilter}}
          <li data-name="{{name}}" class="active">
            <a href="{{filterLink}}">
              {{view 'channel_image' name=name alt=true}}
              {{name}}
              <button type="button" class="glyphicons circle-remove"></button>
            </a>
        {{/if}}
      {{/if}}
    {{/with}}
  {{/each}}

  {{#each collection.models}}
    {{#with attributes}}
      {{#if display}}
        {{#unless isActiveFilter}}
          <li data-name="{{name}}">
            <a href="{{filterLink}}">
              {{view 'channel_image' name=name alt=true}}
              {{name}}
              {{#if count}}
                <span class="count">{{count}}</span>
              {{/if}}
            </a>
        {{/unless}}
      {{/if}}
    {{/with}}
  {{/each}}

  {{#if collection.params.channel}}
    {{#if_gte collection.length compare="15"}}
      <li class="show-more"><span></span>
    {{/if_gte}}
  {{/if}}

</ol>