{{!#if fsJSON.isRootDir}}
  {{!<span class="name {{fsJSON.type}" href="" data-id="{{fsJSON.path}" title="{{projectJSON.name}">{{projectJSON.name}</span>}}
{{!else}}
{{#if editMode}}
{{#with model.attributes}}
<form>
  <input class="name-input" name='name' value="{{name}}" />
</form>
{{/with}}
{{else}}
{{#with model.attributes}}
  {{#if_eq type compare='dir'}}
  <span class="name {{type}}" href="" data-id="{{_id}}" title="{{path}}{{name}}">{{name}}</span>
  {{else}}
  <a class="name {{type}}" href="" data-id="{{_id}}" title="{{path}}{{name}}">{{name}}</a>
  {{/if_eq}}
{{/with}}
{{/if}}