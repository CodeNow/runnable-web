{{#if editmode}}
  {{#with model.attributes}}
    <div id="gravatar">
      <div class="col-sm-8">
        <img src="{{gravitar}}?s=255" alt="{{username}}">
        <a href="https://en.gravatar.com/site/login" target="_blank" class="glyphicons edit"></a>
        <span class="reputation reputation-lg tooltip" data-title="{{taggedImagesCount}} published Runnables">{{taggedImagesCount}}</span>
      </div>
      <h1>
      {{#if isAdmin}}
        <span class="glyphicons shield userBadge adminBadge" ></span>
      {{else}}
        {{#if isModerator}}
          <span class="glyphicons shield userBadge modBadge" ></span>
        {{/if}}
      {{/if}}
      {{username}}
      </h1>
      <p>Started running {{dateAgo created}}.</p>
    </div>
  {{/with}}

  {{#if leaderBadges.length}}
  <ol id="reputation">
    {{#each leaderBadges.models}}
    <li class="col-sm-6 col-md-4">
      <a href="/{{attributes.name}}" class="tooltip" data-title="{{attributes.userImagesCount}} {{attributes.name}} Runnables">
        {{view "channel_image" name=attributes.name}}
      </a>
      <span class="reputation reputation-sm">{{attributes.userImagesCount}}</span>
    {{/each}}
  </ol>
  {{/if}}

  {{#with model.attributes}}
  <form class="inline">
    <span class="glyphicons nameplate"></span>
    <input value="{{name}}" placeholder="Full Name" name="name">
  </form>
  <form class="inline">
    <span class="glyphicons tie"></span>
    <input value="{{company}}" placeholder="Company" name="company">
  </form>
  <form class="inline">
    <span class="glyphicons send {{#unless isVerified}} colorRed {{/unless}}"></span>
    <input value="{{email}}" placeholder="Email" disabled>
    <div class="menu second">
      <a class="glyphicons {{#if show_email}}unlock{{else}}lock{{/if}}" data-toggle="dropdown"></a>
      <ul>
        <li>
          <a class="public">
            <span class="glyphicons unlock"></span>
            Publicly Viewable
          </a>
        <li>
          <a class="private">
            <span class="glyphicons lock"></span>
            Only Me
          </a>
      </ul>
    </div>
    <div class="editpop">
      <a id="change-email" class="glyphicons edit"></a>
    </div>
  </form>
  <form class="inline">
    <span class="glyphicons keys"></span>
    <input value="password" disabled="" type="password">
    <div class="editpop">
      <a id="change-pass" class="glyphicons edit"></a>
    </div>
  </form>
  {{/with}}

{{else}}

  {{#with model.attributes}}
    <div id="gravatar">
      <div class="col-sm-8">
        <img src="{{gravitar}}?s=255" alt="{{username}}">
        <span class="reputation reputation-lg tooltip" data-title="{{taggedImagesCount}} published Runnables">{{taggedImagesCount}}</span>
      </div>
      <h1>{{username}}</h1>
      <p>Running for {{dateAgo created true}}.</p>
    </div>
  {{/with}}

  {{#if leaderBadges.length}}
  <ol id="reputation">
    {{#each leaderBadges.models}}
    <li class="col-sm-6 col-md-4">
      <a href="/{{attributes.name}}" class="tooltip" data-title="{{attributes.userImagesCount}} {{attributes.name}} Runnables">
        {{view "channel_image" name=attributes.name}}
      </a>
      <span class="reputation reputation-sm">{{attributes.userImagesCount}}</span>
    {{/each}}
  </ol>
  {{/if}}

  {{#with model.attributes}}
    {{#if name}}
    <form class="inline">
      <span class="glyphicons nameplate"></span>
      <input value="{{name}}" placeholder="Full Name" name="name" disabled>
    </form>
    {{/if}}
    {{#if show_email}}
    <form class="inline">
      <span class="glyphicons tie"></span>
      <input value="{{email}}" placeholder="Email" disabled>
    </form>
    {{/if}}
    {{#if company}}
    <form class="inline">
      <span class="glyphicons send"></span>
      <input value="{{company}}" placeholder="Company" disabled>
    </form>
    {{/if}}
  {{/with}}
{{/if}}
