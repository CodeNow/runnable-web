{{#if editmode}}
  {{#with model.attributes}}
    <div id="gravitar">
      <div class="col-sm-8">
        <img src="{{gravitar}}?s=255" alt="{{username}}">
        <a href="https://en.gravatar.com/site/login" target="_blank" class="glyphicons edit"></a>
        <span class="reputation tooltip" data-title="{{taggedImagesCount}} published Runnables">{{taggedImagesCount}}</span>
      </div>
      <h1>{{username}}</h1>
      <p>Running for {{dateAgo created true}}.</p>
    </div>
  {{/with}}

  {{#if leaderBadges.length}}
  <ol id="reputation">
    {{#each leaderBadges.models}}
    <li class="col-sm-4">
      <a href="/{{attributes.name}}">
        {{view "channel_image" name=attributes.name}}
      </a>
      <span class="reputation tooltip" data-title="{{attributes.userImagesCount}} {{attributes.name}} Runnables">{{attributes.userImagesCount}}</span>
    {{/each}}
  </ol>
  {{/if}}

