{{#with model.attributes}}
{{#if ../editmode}}
  <div class="gravitar">
    <img src="{{gravitar}}?s=128" alt="{{username}}">
    <a href="http://en.gravatar.com/" target="_blank">Change Gravitar <span class="glyphicon glyphicon-new-window"></span></a>
  </div>
  <h1>{{username}}</h1>
  <div class="edit-inline">
    <input value="{{name}}" placeholder="Full Name" name="name">
    <span class="glyphicon glyphicon-pencil"></span>
  </div>
  <div>
    <input value="{{dateAgo created true}} running" disabled>
  </div>
  <hr>
  <div class="edit-inline">
    <span class="glyphicon glyphicon-envelope"></span>
    <input value="{{email}}" placeholder="Email" disabled>
    <div class="permission">
      <span class="glyphicon glyphicon-eye-{{#if show_email}}open{{else}}close{{/if}}" data-toggle="dropdown"></span>
      <ul class="dropdown-menu">
        <li>
          <a tabindex="-1" class="public">Publicly Viewable</a>
        <li>
          <a tabindex="-1" class="private">Only Me</a>
      </ul>
    </div>
  </div>
  <div class="edit-inline">
    <span class="glyphicon glyphicon-briefcase"></span>
    <input name="company" value="{{company}}" placeholder="Company">
    <span class="glyphicon glyphicon-pencil"></span>
  </div>
{{else}}
  <div class="gravitar">
    <img src="{{gravitar}}?s=128" alt="{{username}}">
  </div>
  <h1>{{username}}</h1>
  {{#if name}}
  <div class="inline">
    <input value="{{name}}" placeholder="Full Name" name="name" disabled>
  </div>
  {{/if}}
  <div class="inline">
    <input value="{{dateAgo created true}} running" disabled>
  </div>
  {{#if show_email}}<hr>
  {{else}}{{#if company}}<hr>{{/if}}
  {{/if}}
  {{#if show_email}}
  <div class="inline">
    <span class="glyphicon glyphicon-envelope"></span>
    <input value="{{email}}" placeholder="Email" disabled>
  </div>
  {{/if}}
  {{#if company}}
  <div class="inline">
    <span class="glyphicon glyphicon-briefcase"></span>
    <input value="{{company}}" placeholder="Company">
  </div>
  {{/if}}
{{/if}}
{{/with}}
