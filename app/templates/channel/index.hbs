{{view "app_user" model=user}}
{{view "header_view" model=user context=.}}
{{view "global_message"}}

<main id="tags-main" class="container">
  <div class="row">
    <div class="col-md-10 col-sm-9 col-md-offset-2 col-sm-offset-3">
      <h1>
      {{#with channel.attributes}}
        {{view "channel_image" name=name}}
        <span>{{name}}</span>
        {{#if description}}
          <p>{{description}}
        {{/if}}
      {{/with}}
      </h1>
    </div>
  </div>

  <div class="row">
    {{view 'feed'
      feed              = feed
      filteringChannels = filteringChannels
      filterMode        = "channel"
    }}
  </div>

 </main>

{{view "footer_view" model=user context=.}}
