{{#each collection.models}}

{{#if_modulo @index 3}}
<div class="row">
{{/if_modulo}}

{{#if_eq attributes.name compare="runnableid"}}
  <div class="col-sm-4">
    <a class="card">
      <div class="description">
        <h2>
          <form>
            <input name='id' placeholder="Runnable Id" class="form-control">
          </form>
        </h2>
        <p>Find an existing code example to start with (Runnable Id is in the url).</p>
      </div>
    </a>
  </div>
{{else}}
  <div class="col-sm-4">
    {{#if attributes.url}}
    <a href="{{attributes.url}}" class="card" data-name="{{attributes.name}}">
    {{else}}
    <a href="{{../../../basehref}}{{invoke . method='appUrl'}}" class="card" data-name="{{attributes.name}}">
    {{/if}}
      {{#with attributes}}
      {{view 'channel_image' name=name height="24" width="22"}}
      <div class="count">{{count}}</div>
      <div class="description">
        <h2>{{name}}</h2>
        {{#if description}}
        <p>{{description}}</p>
        {{/if}}
      </div>
      {{/with}}
    </a>
  </div>
{{/if_eq}}

{{#if_modulo @index 3 1 notzero=true}}
</div>
{{/if_modulo}}

{{/each}}
