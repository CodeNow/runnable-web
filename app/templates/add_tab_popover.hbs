<div class="arrow"></div>
<div class="popover-content">
  <ul id="add-tab-options" class="popover-body">
    <li>
      <a>
        <span class="glyphicons print"></span>
        Terminal
      </a>
    <li>
      <a>
        <span class="glyphicons redo"></span>
        Shortcut
      </a>
  </ul>

  {{#if editmode}}
<button class="delete" type="button">
  <span>Delete</span>
  <span class="glyphicons circle-remove"></span>
</button>
{{/if}}

  <ul id="shortcuts" class="popover-body">
    <li>
      Shortcut 1
      {{!-- {{#if isOwner}} --}}
        <button class="delete" type="button">
          <span>Delete</span>
          <span class="glyphicons circle-remove"></span>
        </button>
      {{!-- {{/if}} --}}
    <li>
      Shortcut 2
      {{!-- {{#if isOwner}} --}}
        <button class="delete" type="button">
          <span>Delete</span>
          <span class="glyphicons circle-remove"></span>
        </button>
      {{!-- {{/if}} --}}
  </ul>
  {{#if noShortcuts}}
  <form class="form-group form-horizontal clearfix">
    <label for="start_cmd">Run cmd</label>
    <input class="form-control" name="start_cmd" value="{{model.attributes.start_cmd}}" disabled>
    <div class="saved">Saved</div>
  </form>
  <hr>
  <form class="form-group form-horizontal clearfix">
    <label for="build_cmd">Build cmd</label>
    <input class="form-control" name="build_cmd" value="{{model.attributes.build_cmd}}" disabled>
    <div class="saved">Saved</div>
  </form>
  <button>Open</button>
  {{/if}}

</div>
