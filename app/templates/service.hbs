{{#if specification}}
{{#with specification.attributes}}
<div class="left">
  <b>{{name}}</b>
  <p>{{description}}</p>
</div>
{{/with}}
<a class="implement right" href="javascript:void(0);">
  <span class="glyphicon glyphicon-cog"></span>
</a>
<div class="clear"></div>
{{#if editmode}}
<div>
  <button name="edit" class="btn-secondary btn-small">
    <i class="icon-edit"></i>
    Edit service
  </button>
</div>
<div>
  <button name="remove" class="btn-secondary btn-small">
  <i class="icon-minus"></i>
  Remove service
</button>
{{/if}}
{{else}}
{{#if editmode}}
<button name="add" class="btn-secondary btn-small">
  <i class="icon-plus"></i>
  Add service
</button>
{{/if}}
{{/if}}
