{{#if embed}}

<div id="project-toolbar">
  <a id="open-file-explorer" class="glyphicons folder-closed"></a>
  <div id="project-editor-tabs-wrapper">
    {{view "file_tabs" collection=defaultFiles}}
  </div>
  {{view "file_select" collection=defaultFiles}}
</div>
{{view "file_explorer" container=container rootDir=rootDir editmode=editmode lock=lock}}
<div id="project-editor-container">
  <!--googleoff: anchor-->
  {{view "code" collection=defaultFiles}}
  <!--googleon: anchor-->
</div>

{{else}}

<div id="project-toolbar">
  <a id="open-file-explorer" class="glyphicons folder-closed"></a>
  {{view "readme_button" model=rootDir collection=defaultFiles editmode=true}}
  <div id="project-editor-tabs-wrapper">
    {{view "file_tabs" collection=defaultFiles}}
  </div>
  {{view "file_select" collection=defaultFiles}}
</div>
{{view "file_explorer" container=container rootDir=rootDir editmode=editmode lock=lock}}
<div id="project-editor-container" {{#if showReadme}}class="show-readme"{{/if}}>
  <!--googleoff: anchor-->
  {{view "code" collection=defaultFiles}}
  <!--googleon: anchor-->
  {{view "html_readme" collection=defaultFiles model=rootDir editmode=true containername=container.attributes.name}}
</div>

{{/if}}