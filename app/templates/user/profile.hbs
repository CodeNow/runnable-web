{{view "app_user" model=user}}
{{view "header_view" model=user context=.}}
{{view "global_message"}}

<main class="container">
  {{view "dashboard_profile" model=profileuser editmode=editmode}}

  <section id="dashboard">

    <ul id="reputation">
      <li>{{view "tag_score" name="Node.js" reputation="10k" meter=12}}
      <li>{{view "tag_score" name="jQuery" reputation="6k" meter=42}}
      <li>{{view "tag_score" name="PHP" reputation="2,312" meter=87}}
      <li>{{view "tag_score" name="Firebase" reputation="209" meter=22}}
      <li>{{view "tag_score" name="Twilio" reputation="123" meter=100}}
      <li>{{view "tag_score" name="express" reputation="22" meter=52}}
    </ul>

    {{#if editmode}}
    <ul class="nav nav-tabs">
      <li {{#if publishedActive}}class="active"{{/if}}><a href="#published"><span>{{published.length}}</span> Published</a>
      <li {{#if draftsActive}}class="active"{{/if}}><a href="#drafts"><span>{{drafts.length}}</span> Drafts</a>
    </ul>
    <div class="tab-content">
      <div id="published" class="tab-pane{{#if publishedActive}} active in{{/if}}">
        {{view "dashboard_runnables" classname="dashboard-runnables" collection=published editmode=editmode}}
      </div>
      <div id="drafts" class="tab-pane{{#if draftsActive}} active in{{/if}}">
        {{view "dashboard_runnables" classname="dashboard-runnables" collection=drafts editmode=editmode}}
      </div>
    </div>
    {{else}}
    {{view "dashboard_runnables" classname="dashboard-runnables" collection=published}}
    {{/if}}
  </section>
</main>

{{view "footer_view" model=user context=.}}
