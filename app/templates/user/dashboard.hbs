{{view "app_user" model=user}}
{{view "header_view" model=user context=.}}
{{view "global_message"}}

<main class="container">
  {{view "dashboard_profile" model=user}}

  <section id="dashboard">
    <div class="dropdown">
      <button type="button" class="dropdown">
        <div class="filter-option pull-left">Recent </div>
        <div class="caret"></div>
      </button>
      <select>
        <option value="Recent" selected>Recent
        <option value="Copies">Copies
        <option value="Runs">Runs
        <option value="Views">Views
      </select>
    </div>
    <ul class="nav nav-tabs">
      <li class="active"><a href="#"><span>{{published.length}}</span> Published</a>
      <li><a href="#"><span>{{drafts.length}}</span> Drafts</a>
    </ul>
    <ul class="dashboard-runnables">
      {{view "dashboard_runnables" collection=published}}
    </ul>
    <ul class="dashboard-runnables">
      {{view "dashboard_runnables" collection=drafts}}
    </ul>
  </section>
</main>

{{view "footer_view" model=user context=.}}
